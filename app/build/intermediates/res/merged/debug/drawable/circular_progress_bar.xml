<?xml version="1.0" encoding="utf-8"?>
<rotate
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="90"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="270"
    android:duration="10">

    <shape
        android:innerRadiusRatio="5"
        android:shape="ring"
        android:thicknessRatio="8.0">

        <gradient
            android:centerColor="#72E236"
            android:endColor="#BFF409"
            android:startColor="#4FC4A1"
            android:angle="0"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>